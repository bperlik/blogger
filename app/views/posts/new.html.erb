<h1>Create your new post</h1>
 <body>
 
<%= form_for @post, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">     
      <%= f.label :title, "Title:", class: "col-md-4 control-label" %> 
      <div class="col-md-10">
         <%= f.text_area :title, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
     <%= f.label :body, "Body:", class: "col-md-4 control-label" %> 
     <div class="col-md-10">
        <%= f.text_area :body, class: "form-control" %>
     </div>
  </div>

  <%= f.submit "Create post", class: "btn btn-primary btn-lg" %>
<% end %>

</body>